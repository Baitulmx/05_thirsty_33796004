<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="/style.css">
    <title><%= shopName %> - Customer Survey</title>
  </head>
  <body>
    <h1>Customer Survey</h1>

    <form method="POST" action="/survey_result">
      <h2>Personal Information</h2>
      <label>First Name:</label>
      <input type="text" name="first" required><br>

      <label>Surname:</label>
      <input type="text" name="last" required><br>

      <label>Email:</label>
      <input type="email" name="email" required><br>

      <h2>Survey Questions</h2>
      <label>How old are you?</label><br>
      <input type="text" name="age" placeholder="Enter your age"><br><br>

      <fieldset style="border: none;">
        <legend>Which of the following drink categories do you consume?</legend>
        <% for (let i = 0; i < productCategories.length; i++) { %>
          <div class="radio-row">
            <label><%= productCategories[i] %></label>
            <input type="radio" name="drinkCategory" value="<%= productCategories[i] %>">
          </div>
        <% } %>
      </fieldset>
      
      <br>
      <label>Are you a student?</label>
      <input type="checkbox" name="isStudent" value="Yes"><br><br>
      <input type="submit" value="Submit Survey">
    </form>
  </body>
</html>
